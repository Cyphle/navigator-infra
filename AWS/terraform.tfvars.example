# Example Terraform Variables File
# Copy this file to terraform.tfvars and update the values

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "navigator"
environment  = "prod"

# Domain Configuration
domain_names = {
  frontend = ["app.one-navigator.fr", "app.one-navigator.com"]
  auth     = ["auth.one-navigator.fr", "auth.one-navigator.com"]
}

# Database Configuration (optimized for free tier)
database_config = {
  instance_class         = "db.t3.micro"
  allocated_storage      = 20
  max_allocated_storage  = 100
  backup_retention_period = 7
  backup_window          = "03:00-04:00"
  maintenance_window     = "sun:04:00-sun:05:00"
}

# ECS Configuration (optimized for free tier)
ecs_config = {
  cpu          = 256
  memory       = 512
  desired_count = 1
}

# Keycloak Configuration
keycloak_config = {
  admin_user     = "admin"
  admin_password = "admin123!" # Change this in production
  realm_name     = "quarkusexample"
}

# React Frontend Configuration
react_config = {
  api_url        = "https://app.one-navigator.fr/api"
  auth_url       = "https://auth.one-navigator.fr"
  auth_realm     = "quarkusexample"
  auth_client_id = "navigator"
}